{
	"name": "svelte-component-test-recipes",
	"description": "Svelte component test recipes using Vitest & Testing Library",
	"author": "David Peng <davipondev@gmail.com>",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"postinstall": "patch-package",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test": "vitest",
		"coverage": "vitest run --coverage"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "1.0.0-next.71",
		"@sveltejs/kit": "1.0.0-next.478",
		"@testing-library/dom": "^8.17.1",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/svelte": "^3.2.1",
		"@testing-library/user-event": "^14.4.3",
		"@types/testing-library__jest-dom": "^5.14.5",
		"@typescript-eslint/eslint-plugin": "^5.36.2",
		"@typescript-eslint/parser": "^5.36.2",
		"c8": "^7.12.0",
		"eslint": "^8.23.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"jsdom": "^20.0.0",
		"msw": "^0.47.0",
		"patch-package": "^6.4.7",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.0",
		"svelte": "^3.50.1",
		"svelte-check": "^2.9.0",
		"svelte-fragment-component": "^1.2.0",
		"svelte-htm": "^1.1.1",
		"svelte-preprocess": "^4.10.7",
		"tslib": "^2.4.0",
		"typescript": "^4.8.3",
		"vite": "^3.1.0",
		"vitest": "^0.23.1"
	},
	"type": "module"
}
